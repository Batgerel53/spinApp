{% extends 'base.html.twig' %}

{% block title %}Нэвтрэх {% endblock %}

{% block body %}

<div class="limiter">
<div class="container-login100">
<div class="wrap-login100 p-b-160 p-t-50">


<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
           Нэвтэрсэн байна {{ app.user.username }}, <a href="{{ path('app_logout') }}">Гарах</a>
        </div>
    {% endif %}

    <h3 class="mt-5 mb-5" style="color:white; text-align:center; font-size:36px;"> Нэвтрэх </h3>
         
    <label for="inputEmail">И-мэйл хаяг</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Нууц үг</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>







    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate')}}">

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Сануулах
            </label>
        </div>
  
    <button class="login100-form-btn" type="submit">
     Нэвтрэх
    </button>
</form>

</div>
</div>
</div>

